<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ayush.bmi.MainActivity2"
    android:background="@color/accent_material_light">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/w1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:hint="Enter Weight in Kg."
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/h1"
        android:layout_below="@+id/w1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:hint="Enter Height in m."
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/b2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="buttontwoclick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your BMI"
        android:id="@+id/bmi"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_below="@+id/b2"
        android:layout_alignLeft="@+id/res"
        android:layout_alignStart="@+id/res" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Result"
        android:id="@+id/res"
        android:layout_marginTop="44dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_below="@+id/bmi"
        android:layout_alignLeft="@+id/h1"
        android:layout_alignStart="@+id/h1" />
</RelativeLayout>
